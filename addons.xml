<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addons>
	<addon id="plugin.video.nextgenrt" name="NextGen RT News" version="1.0.29" provider-name="poslogica">
		<requires>
			<import addon="xbmc.python" version="3.0.1" />
			<import addon="inputstream.adaptive" />
		</requires>
		<extension point="xbmc.python.pluginsource" library="default.py">
			<provides>video</provides>
		</extension>
		<extension point="xbmc.addon.metadata">
			<summary lang="en">NextGen RT News</summary>
			<description lang="en">NextGen RT News Kodi Plugin. Streams RT News content directly in Kodi including Global, US, Documentaries, Spanish (ESP), German (DE), French (FR), and Russian (RS) channels. Automatic updates available via repository.</description>
			<disclaimer lang="en">Feel free to use this script.</disclaimer>
			<platform>all</platform>
			<language>en</language>
			<license>GNU GENERAL PUBLIC LICENSE. Version 2, June 1991</license>
			<website>https://www.rt.com</website>
			<source>https://github.com/poslogica/plugin.video.nextgenrt</source>
		</extension>
	</addon>
	<addon id="plugin.video.nextgenrttvseries" name="NextGen RT TV Series" version="1.0.0" provider-name="poslogica">
		<requires>
			<import addon="xbmc.python" version="3.0.1" />
			<import addon="inputstream.adaptive" />
		</requires>
		<extension point="xbmc.python.pluginsource" library="default.py">
			<provides>video</provides>
		</extension>
		<extension point="xbmc.addon.metadata">
			<summary lang="en">NextGen RT TV Series</summary>
			<description lang="en">Browse and stream RT TV series and documentaries. Discover multi-season series with organized episode listings from RTDoc.</description>
			<disclaimer lang="en">Feel free to use this script.</disclaimer>
			<platform>all</platform>
			<language>en</language>
			<license>GNU GENERAL PUBLIC LICENSE. Version 2, June 1991</license>
			<website>https://rtdoc.tv</website>
			<source>https://github.com/poslogica/plugin.video.nextgenrt</source>
		</extension>
	</addon>
	<addon id="repository.nextgenrt" name="NextGen RT Repository" version="1.0.0" provider-name="poslogica">
		<extension point="xbmc.addon.repository" name="NextGen RT Repository">
			<dir>
				<info compressed="false">https://archive.org/download/nextgenrtkodirepository/addons.xml</info>
				<checksum>https://archive.org/download/nextgenrtkodirepository/addons.xml.md5</checksum>
				<datadir zip="true">https://archive.org/download/nextgenrtkodirepository/</datadir>
			</dir>
		</extension>
		<extension point="xbmc.addon.metadata">
			<summary lang="en">NextGen RT Repository</summary>
			<description lang="en">Repository for NextGen RT News addons. Install this to get automatic updates for RT News streaming plugins.</description>
			<disclaimer lang="en"></disclaimer>
			<platform>all</platform>
		</extension>
	</addon>
</addons>
