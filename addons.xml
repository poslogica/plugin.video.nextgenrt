<?xml version="1.0" encoding="UTF-8"?>
<addons>
	<addon id="plugin.video.nextgenrt" name="NextGen RT News" version="1.0.10" provider-name="poslogica">
		<requires>
			<import addon="xbmc.python" version="3.0.1" />
			<import addon="inputstream.adaptive" />
		</requires>
		<extension point="xbmc.python.pluginsource" library="default.py">
			<provides>video</provides>
		</extension>
		<extension point="xbmc.addon.metadata">
			<summary lang="en">NextGen RT News</summary>
			<description lang="en">NextGen RT News Kodi Plugin. Streams RT News content directly in Kodi including Global, US, Documentaries, Spanish (ESP), and Arabic channels.</description>
			<disclaimer lang="en">Feel free to use this script.</disclaimer>
			<platform>all</platform>
			<language>en</language>
			<license>GNU GENERAL PUBLIC LICENSE. Version 2, June 1991</license>
			<website>https://www.rt.com</website>
			<source>https://github.com/poslogica/plugin.video.nextgenrt</source>
			<news>[B]NextGen RT News ChangeLog v1.0.10 - 2025-10-23[/B]
	- docs: add Kodi repository installation instructions to README
	- feat: add automated gh-pages repository updates and repository addon
			</news>
		</extension>
	</addon>	<addon id="repository.nextgenrt" name="NextGen RT Repository" version="1.0.0" provider-name="poslogica">
		<extension point="xbmc.addon.repository" name="NextGen RT Repository">
			<dir>
				<info compressed="false">https://raw.githubusercontent.com/poslogica/plugin.video.nextgenrt/gh-pages/addons.xml</info>
				<checksum>https://raw.githubusercontent.com/poslogica/plugin.video.nextgenrt/gh-pages/addons.xml.md5</checksum>
				<datadir zip="true">https://raw.githubusercontent.com/poslogica/plugin.video.nextgenrt/gh-pages/</datadir>
			</dir>
		</extension>
		<extension point="xbmc.addon.metadata">
			<summary lang="en">NextGen RT News Repository</summary>
			<description lang="en">Repository for NextGen RT News addons. Install this to get automatic updates for RT News streaming plugins.</description>
			<disclaimer lang="en"></disclaimer>
			<platform>all</platform>
			<assets>
				<icon>icon.png</icon>
				<fanart>fanart.jpg</fanart>
			</assets>
		</extension>
	</addon>
</addons>
